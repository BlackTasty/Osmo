<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="colorZone" TargetType="{x:Type material:ColorZone}">
        <Setter Property="material:ColorZoneAssist.Mode" Value="Light"/>
    </Style>

    <SolidColorBrush x:Key="ErrorBrushLight" Color="#ff6e6e"/>
    <SolidColorBrush x:Key="ErrorBrushDark" Color="#d50000"/>
</ResourceDictionary>