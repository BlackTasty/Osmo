<UserControl x:Class="Installer.UI.Uninstall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Installer.UI"
             mc:Ignorable="d" 
             d:DesignHeight="322" d:DesignWidth="414">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="182*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="5">
            <TextBlock x:Name="txt_log" TextWrapping="Wrap" Text="Preparing uninstaller..." d:LayoutOverrides="Width, Height" Background="{DynamicResource PrimaryDark}" Foreground="{DynamicResource TextPrimary}"/>
        </ScrollViewer>
        <TextBlock x:Name="txt_status" Grid.Row="1" TextWrapping="Wrap" Text="Preparing uninstaller..." d:LayoutOverrides="Width, Height"/>
        <ProgressBar x:Name="progress" Grid.Row="3" Background="{DynamicResource PrimaryDark}" BorderBrush="{DynamicResource PrimaryDark}" Foreground="{DynamicResource Border}" IsIndeterminate="True"/>

    </Grid>
</UserControl>
