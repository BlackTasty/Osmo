<UserControl x:Class="Installer_Online.UI.Install"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="322" d:DesignWidth="414">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" x:Name="panel_downloader" Visibility="Collapsed">
            <TextBlock x:Name="txt_statusDownload" Margin="8,0" TextWrapping="Wrap" Text="Downloading files..." DockPanel.Dock="Top"/>
            <ProgressBar x:Name="progressDownload" DockPanel.Dock="Top" Margin="0,8"/>
        </DockPanel>
        <TextBlock x:Name="txt_status" Margin="8,0" TextWrapping="Wrap" Text="Preparing installer..." DockPanel.Dock="Top"/>
        <ProgressBar x:Name="progress" IsIndeterminate="True" DockPanel.Dock="Top" Margin="0,8"/>
        <ScrollViewer Margin="8,8,0,8">
            <TextBlock x:Name="txt_log" TextWrapping="Wrap" Text="Preparing installer..."/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
