<Grid x:Class="Osmo.UI.SkinSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:converter="clr-namespace:Osmo.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700" Tag="My skins">

    <Grid.Resources>
        <converter:IntToBooleanConverter x:Key="IntToBoolean"/>
    </Grid.Resources>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="150"/>
        <ColumnDefinition Width="298*"/>
        <ColumnDefinition Width="170"/>
        <ColumnDefinition Width="130"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition Height="12"/>
        <RowDefinition Height="42"/>
    </Grid.RowDefinitions>
    <ListView x:Name="lv_skins" ItemsSource="{Binding Skins}" Grid.ColumnSpan="4">
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="200"/>
                <GridViewColumn DisplayMemberBinding="{Binding Author}" Header="Author" Width="200" />
                <GridViewColumn DisplayMemberBinding="{Binding ElementCount}" Header="Elements" Width="100" />
                <GridViewColumn Header="Delete" Width="80">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <Button Height="16" Width="16" Style="{StaticResource MaterialDesignFlatButton}"
                                                ToolTip="Delete skin">
                                <material:PackIcon
                                    Kind="Delete"
                                    Height="16"
                                    Width="16" />
                            </Button>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
    <!--<material:Snackbar MessageQueue="{material:MessageQueue}" x:Name="MainSnackbar"
                                            Grid.Row="1" />-->
    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                            ToolTip="MIX SKINS" Width="140" Grid.Row="2" IsEnabled="{Binding SelectedIndex, ConverterParameter=0, Converter={StaticResource IntToBoolean}, ElementName=lv_skins}" Margin="5">_LOAD SKIN</Button>

    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                            ToolTip="NEW EMPTY SKIN" Width="160" Grid.Column="2" Grid.Row="2" Margin="5">_NEW EMPTY SKIN</Button>
    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                            ToolTip="MIX SKINS" Width="120" Grid.Column="3" Grid.Row="2" Margin="5">_MIX SKINS</Button>
</Grid>
